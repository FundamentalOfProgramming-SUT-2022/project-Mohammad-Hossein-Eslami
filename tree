                int counter2 = 1; //This counter is used to get command
                if (c1 != '"'){
                while(1){
                    c1 = 0;
                    c1 = getchar();
                    *(message+counter2) = c1;
                    counter2++;
                    if( c1 == ' '){
                        break;
